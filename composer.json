     "description" : "extension to manage LTI services for TAO",
     "support": {
     "forum": "http://forum.taotesting.com",
     "issues": "http://forge.taotesting.com"
    },
    "homepage" : "http://www.taotesting.com",
    "minimum-stability": "dev",
    "prefer-stable" : true,    
    "license" : [
          "GPL-2.0-only"
     ],
    "keywords" : [
          "tao",
          "oat",
          "LTI",
          "computer-based-assessment"
     ],

    "name": "openthinklabs/extension-tao-lti",
    "type" : "tao-extension",
    "extra" : {
    	"tao-extension-name" : "taoLti"
    },
    "repositories": [
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/oatbox-extension-installer.git"
      },
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/lib-lti1p3-ags.git"
      },        
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/lib-lti1p3-core.git"
      },                
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/generis.git"
      },
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/tao-core.git"
      },
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/lib-generis-search.git"
      },
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/jig.git"
      },
      {
        "type": "vcs",
        "url": "git@github.com:openthinklabs/composer-npm-bridge.git"
      }                            
     ],     
    "require": {
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^6.5 || ^7.0",
        "openthinklabs/oatbox-extension-installer": "~1.1||dev-master",
        "openthinklabs/lib-lti1p3-ags": "1.3.0.2",
        "openthinklabs/lib-lti1p3-core": "^6.0.0",
        "openthinklabs/generis" : "15.13.1.4",
        "openthinklabs/tao-core" : "48.75.0.6"
    },
    "autoload" : {
        "psr-4" : {
            "oat\\taoLti\\" : ""
        }
    },
    "autoload-dev" : {
      "psr-4" : {
        "OAT\\Library\\Lti1p3Core\\Tests\\": "../vendor/oat-sa/lib-lti1p3-core/tests/"
      }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "openthinklabs/oatbox-extension-installer": true,
            "openthinklabs/composer-npm-bridge": true
        }
    }
}
